<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-7">
            <h3>Agregar servicio</h3>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <label for="TituloServicio">Nombre</label>
                    <input type="text" class="form-control" id="TituloServicio" name="TituloServicio"
                        placeholder="Nombre del servicio">
                </div>
                <div class="form-group">
                    <label for="DescripcionServicio">Descripci√≥n</label>
                    <textarea class="form-control" id="DescripcionServicio" name="DescripcionServicio"
                        rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="ImagenServicio">Link a imagen</label>
                    <input type="text" class="form-control" id="ImagenServicio" name="ImagenServicio"
                        placeholder="Link a imagen">
                </div>
                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
{{/if}}